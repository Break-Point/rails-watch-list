<head>
  <%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload', defer: true %>
</head>

<div class="d-flex justify-content-center align-items-center flex-column" id="hero">
  <h2>List of movies</h2>
  <p>
    <span id="banner-typed-text"></span>    
  </p>
</div>



<div class="d-flex justify-content-center align-items-center flex-column">
  
  <div class="list-header p-3 m-2 d-flex justify-content-between">
    <h3 class="p-1 m-1 d-flex align-items-center">My lists</h3>
    <%# <button id="sweet-alert-demo" class="btn btn-primary">Click me!</button> %>
    <h3 class="p-2 m-1 d-flex align-items-center btn btn-success " data-toggle="modal" data-target="#NewListModal" data-whatever=""><i class="far fa-plus-square"> add a new list</i></h3>
  </div>
  
  <div class="cards d-flex p-2 justify-content-between flex-wrap">  
    <% @lists.each do |list| %>
      <div class="card m-2 justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
        <%= link_to list_path(list) do %>
          <h3 class="card-title mb-0"> <%= list.name %></h3>
        <% end %>
        <div class="icon-small">
          <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_list_path(list) %>
          <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, list_path(list),
              method: :delete,
              data: { confirm: "are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>

</div>

<%# Modal %>
<div class="modal fade" id="NewListModal" tabindex="-1" role="dialog" aria-labelledby="NewListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <h5 class="modal-title" id="NewListModalLabel">Add A New List</h5>
    <div class="modal-content">

      <div class="modal-body">
        
        <%= render 'form', list: @list %>

      </div>

    </div>
  </div>
<div>
<%# Modal %>